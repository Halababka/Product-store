generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id     Int     @id @default(autoincrement())
  plu    String  @unique
  name   String
  stocks Stock[]
}

model Stock {
  id              Int     @id @default(autoincrement())
  quantityOnShelf Int
  quantityInOrder Int
  productId       Int
  shopId          Int
  Product         Product @relation(fields: [productId], references: [id])
  Shop            Shop    @relation(fields: [shopId], references: [id])
}

model Shop {
  id     Int     @id @default(autoincrement())
  name   String
  stocks Stock[]
}
